<div id="search-panel">
  <%= form_tag @search_url, :method => :get, :id => "search" do %>
    <%= text_field_tag "search[search_string]", nil, :size => 60 %></input>
    <%= submit_tag "Rechercher" %></input>
  <% end %>
</div>

<% unless @categories.empty? %>
 <div id="categories-panel">
    <% @categories.each do |category| %>
      <p><%= link_to h(category.name), @show_sub_category_url_options.merge(:id => category.id) %></p>
    <% end%>
  </div>
<% end %>

<% extra_columns_proc = lambda do |item| %>
  <td><%= item.price.to_s %>â‚¬</td>
  <% if item.disabled? %>
    <td class="buy-button"><%= button_to h(@add_item_label), @add_item_url_options.merge(:id => item.id), @add_item_html_options.merge(disabled: 'disabled') %></td>
  <% else %>
    <td class="buy-button"><%= button_to h(@add_item_label), @add_item_url_options.merge(:id => item.id), @add_item_html_options %></td>
  <% end %>
<% end %>

<%= render(:partial => "shared/items", :object => @items, :locals => { :extra_columns_proc => extra_columns_proc }) %>
