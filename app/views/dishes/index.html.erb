<table>
  <% @dishes.each do |dish| %>
    <tr>
      <td><%= link_to h(dish.name), dish_path(dish) %></td>
    <td class="buy-button"><%= button_to 'Ajouter au panier', {:controller => 'cart', :action => 'add_dish', :id => dish.id } %></td>
    </tr>
  <% end%>
  <tr>
    <td>
      <%= link_to 'Ajouter une recette', :action => 'new' %>
    </td>
  </tr>
</table>

