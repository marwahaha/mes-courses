# starting to work & preparing the dev db, don't work on production db, or we'll end up with failing binary merges
cd mes-courses.fr
./pull-cms.sh

# updating dev env from live db
cd mes-courses.fr
./pull-cms.sh

# working, many times
cd cms
# change the dev db
rake db:to_fs
cd mes-courses.fr
git add .
git commit -m ...

# deploying
cd mes-courses.fr
heroku maintenance:on --app mes-courses-cms
./pull-cms.sh
# run the app and test
./push-cms.sh
heroku maintenance:off --app mes-courses-cms
