#!/bin/sh

echo "Pulling live db to cms_branch" &&
git checkout cms_branch &&
heroku db:pull --confirm mes-courses-cms --app mes-courses-cms &&
rake db:layouts_and_snippets:to_fs &&
git add . &&
git commit -m "Merge live cms db (Bloging)" &&
echo "Merging to master branch" &&
git checkout master &&
git merge -s subtree cms_branch &&
echo "Preparing dev env"
cd cms &&
heroku db:pull --confirm mes-courses-cms --app mes-courses-cms &&
rake fs:layouts_and_snippets:to_db &&
cd .. &&
echo "Finished"

  - push

#!/bin/sh

git checkout cms_branch &&
git merge -s subtree master &&
git push cms cms_branch:master &&
heroku rake fs:layouts_and_snippets:to_db --app mes-courses-cms &&
git checkout master &&

echo "Master pushed to CMS"

  - commit cms

